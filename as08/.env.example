# Example environment variables for Docker Compose
# PostgreSQL credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=next_app_db

# Database connection URL for the Next.js application
# Service hostname 'db' matches the service name in docker-compose.yml
DATABASE_URL=postgresql://postgres:postgres@db:5432/next_app_db
 
# URL for the API service (used by the frontend proxy)
API_URL=http://api:3001